%form{:action => "/dog/create", :method => "post"}
  %input{:type => "textbox", :name => "name", :id => "name"}
  %input{:type => "submit", :value => "Add Doggie!"}

%h2 Doggies (#{@dogs.size}):
- unless @dogs.empty?
  %ul
    - @dogs.each do |d|
      %li{:class => "completed"}
        %a{:href => "/dog/#{d.id}/edit"}= d.name
        (#{d.pictures.size})
        %a{:href => "/picture/#{d.id}/new"} Add picture

- else
  %p No Doggies yet!
